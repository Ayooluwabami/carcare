{
  "compilerOptions": {
    "target": "ES2020",                     
    "module": "CommonJS",                    
    "rootDir": "./src",                      
    "outDir": "./dist",                       
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,                
    "baseUrl": ".",                           
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "src/**/*.ts"                            
  ],
  "exclude": [
    "node_modules",                          
    "**/*.spec.ts"                           
  ]
}
